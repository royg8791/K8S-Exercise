# Default server configuration
#
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		try_files $uri $uri/ =404;
	}
}
server {
        listen 80;
	server_name findip.nif.catchmedia.com;
        location / {
                proxy_pass http://127.0.0.1:32222;
        }
}
server {
        listen 80;
        server_name bear.nif.catchmedia.com;
	location / {
                proxy_pass http://127.0.0.1:31111;
        }
}       
server {
        listen 80;
        server_name hare.nif.catchmedia.com;
	location / {
                proxy_pass http://127.0.0.1:31112;
	}
}       
server {
        listen 80;
        server_name moose.nif.catchmedia.com;
        location / {
                proxy_pass http://127.0.0.1:31113;
        }
}       
server {
        listen 80;
        server_name capture.nif.catchmedia.com;
        location / {
                proxy_pass http://127.0.0.1:32223;
        }
}
